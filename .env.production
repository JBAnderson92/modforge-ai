# Production Environment Configuration
# Copy this to .env.production and update with your production values

# Server Configuration
PORT=8080
DATABASE_URL=modforge.db
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your-production-openai-key

# Cloudflare R2 Storage Configuration
CLOUDFLARE_R2_ACCOUNT_ID=your-production-account-id
CLOUDFLARE_R2_API_TOKEN=your-production-api-token
CLOUDFLARE_R2_BUCKET_NAME=modforge-production
CLOUDFLARE_R2_REGION=auto

# Firebase Configuration (for authentication)
FIREBASE_PROJECT_ID=your-production-firebase-project
FIREBASE_PRIVATE_KEY_ID=your-production-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-production-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-production-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# VirusTotal Configuration (optional)
VIRUSTOTAL_API_KEY=your-production-virustotal-key

# Production Settings
GIN_MODE=release
LOG_LEVEL=info
ENABLE_CORS=true
RATE_LIMIT_ENABLED=true
MAX_FILE_SIZE=104857600
